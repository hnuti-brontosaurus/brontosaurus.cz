{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"lib": [
			"dom", "es6", "dom.iterable", "scripthost", // default (@see https://www.typescriptlang.org/docs/handbook/compiler-options.html)
			"es2016.array.include" // custom stuff
		],

		"noImplicitAny": true,
		"strict": true
	},
	"exclude": [
		"node_modules"
	]
}
